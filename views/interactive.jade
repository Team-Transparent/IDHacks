extends layout

block content
    h1= title

    .row
        .col-sm-3
            ul.nav.nav-pills.nav-stacked
                each csv in csvs
                    li
                        a.csv(href='#', id=csv)
                            | CSV #!{csv}
        .col-sm-9#results-placeholder.text-center.well
            span.fa.fa-pie-chart.text-success.fa-4x
            h3
                | Click a CSV on the left to view it and visualize it.
        .col-sm-9#results-pane(style='display: none')
            a#visualize-link.btn.btn-lg.btn-success.btn-block
                span.fa.fa-pie-chart
                |  Visualize
            br

            a#download-link.btn.btn-default.btn-block
                span.fa.fa-download
                |  Download CSV

            pre#csv-output

    script(src='/scripts/interactive.js')
